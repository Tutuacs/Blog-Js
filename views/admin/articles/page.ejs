<%- include('../../partials/header.ejs'); %>
    <%- include('../../partials/homenavbar.ejs'); %>

        <body>
            <br>
            <div class="container">
                <hr>
                <% result.articles.rows.forEach(article=> { %>
                    <div class="card">
                        <div class="card-header">
                            <h2>
                                <%= article.title %>
                            </h2>
                        </div>
                        <div class="card-body">
                            <a href="/<%= article.slug %>" class="btn btn-success">Ler artigo</a>
                        </div>
                    </div>
                    <br>
                    <% }); %>
                        <div role="group" aria-label="Basic example">
                            <div class="">
                                <td>
                                    <tr>
                                        <div> 
                                            <% if(result.page>=2){ %>
                                                <a type="button" style="float:left"
                                                    href="/articles/page/<%=result.page -1 %>"
                                                    class="btn btn-outline-dark ml-auto">Back</a>
                                                <% } %>
                                                <% if(result.next){ %>
                                                    <a style="float:right;" href="/articles/page/<%=result.page +1 %>"
                                                    type="button" class="btn btn-outline-dark mr-auto">Next</a>
                                                <% } %>
                                        </div>
                                    </tr>
                                </td>
                            </div>
                        </div>
                        <br>
                        <br>
                        <hr>
            </div>
        </body>

        <%- include('../../partials/footer.ejs'); %>