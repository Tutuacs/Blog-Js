<%- include('../../partials/header.ejs'); %>
    <%- include('../../partials/navbar.ejs') %>

        <body>

            <div class="container">
                <hr>
                <div>
                    <h2>Artigos</h2>
                    <br>
                    <a class="btn btn-outline-success" href="/admin/articles/new">Criar novo artigo</a>
                </div>
                <hr>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Titulo</th>
                            <th>Slug</th>
                            <th>Categoria</th>
                            <th>Acoes</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% articles.forEach(article=> { %>
                            <tr>
                                <td>
                                    <%= article.id %>
                                </td>
                                <td>
                                    <%= article.title %>
                                </td>
                                <td>
                                    <%= article.slug %>
                                </td>
                                <td>
                                    <%= article.category.title %>
                                </td>
                                <td>
                                    <a href="/admin/articles/edit/<%= article.id%>" class="btn btn-warning">Editar</a>
                                    <form method="POST" action="/articles/delete" style="display: inline;"
                                        onsubmit="confirmDell(event,this)">
                                        <input type="hidden" name="id" value="<%= article.id%>">
                                        <button class="btn btn-danger">Deletar</button>
                                </form>
                                </td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
            </div>

        </body>
        <%- include('../../partials/footer.ejs'); %>
            <script>
                function confirmDell(ev, form) {
                    ev.preventDefault();
                    var conf = confirm("Tem certeza que deseja deletar este dado?");
                    if (conf) {
                        form.submit();
                    }
                }
            </script>